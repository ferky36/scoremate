{
  "version": 1,
  "templates": [
    {
      "id": "top_total",
      "when": { "type": "always" },
      "build": { "type": "top_list", "source": "pf", "count": 3, "label": "Peringkat berdasarkan Total", "suffix": "mengejar." }
    },
    {
      "id": "best_diff",
      "when": { "type": "always" },
      "build": { "type": "top_list", "source": "diff", "count": 2, "label": "Selisih terbaik", "format": "{name} (+{value})", "join": " & ", "suffix": "menunjukkan kontrol game tinggi." }
    },
    {
      "id": "wr_high",
      "when": { "type": "wr_ge", "threshold": 0.7 },
      "build": { "type": "list_filter", "source": "wr", "op": ">=", "threshold": 0.7, "label": "WinRate unggul (≥ 70%)", "format": "{name} {pct}%", "join": ", ", "suffix": "— kandidat kunci untuk pairing berat." }
    },
    {
      "id": "needs_improve",
      "when": { "type": "any_wr_le_and_diff_neg", "threshold": 0.25 },
      "build": { "type": "needs_improve", "threshold": 0.25, "limit": 4 }
    },
    {
      "id": "consistency_watch",
      "when": { "type": "exists_mid_wr", "min": 0.45, "max": 0.55 },
      "build": { "type": "consistency", "min": 0.45, "max": 0.55 }
    },
    {
      "id": "tightest_match",
      "when": { "type": "have_matches" },
      "build": { "type": "tightest" }
    },
    {
      "id": "avg_margin_low",
      "when": { "type": "avg_margin_le", "threshold": 6 },
      "build": { "type": "text", "label": "Selisih poin rata-rata rendah → pertandingan cenderung kompetitif." }
    },
    {
      "id": "avg_margin_high",
      "when": { "type": "avg_margin_ge", "threshold": 12 },
      "build": { "type": "text", "label": "Selisih poin rata-rata tinggi → disparitas performa terlihat." }
    },
    {
      "id": "rotation_spread",
      "when": { "type": "have_matches" },
      "build": { "type": "rotation", "good_max": 1 }
    }
  ]
}

